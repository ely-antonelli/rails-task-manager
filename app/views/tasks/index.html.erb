<div class="container">
<div>
  <h1>My tasks</h1>
</div>
<div class="container-form">
    <ul class="list-group">
      <%# <i class="fa-solid fa-square-check"></i> %>
      <% @tasks.each do |task| %>
        <li><input type="checkbox" class="label"><%= link_to task.name, task_path(task.id) %></li>
      <% end %>
    </ul>
    </div>
    <p><%= link_to '<i class="fa-solid fa-plus"></i> Add new task'.html_safe, new_task_path, class: "btn-grey" %></p>
</div>
